@model HRMS_WEB.Entities.SpecialTask

@{
    ViewData["Title"] = "Assign special task";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Assign special task</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Assign special task</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content p-5">
        <div class="card card-info">
            <div class="card-header">
                <h3 class="card-title">Assign special task</h3>
            </div>
            <div class="card-body p-3">
                <div class="row">
                    <div class="col-md-12">
                        <form asp-action="CreateSpecialtask" asp-controller="User">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="row">
                                <div class="col-12 col-sm-12">
                                    <div class="form-group">
                                        <label asp-for="Name" class="control-label"></label>
                                        <input asp-for="Name" class="form-control" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12 col-sm-6">
                                    <div class="form-group">
                                        <label asp-for="UserID" class="control-label"></label>
                                        <select asp-for="UserID" class="form-control select2" asp-items="@(new SelectList(ViewBag.usersList,"ID","Username"))"></select>
                                        <span asp-validation-for="UserID" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Email" class="control-label"></label>
                                        <input asp-for="Email" class="form-control" type="email" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="form-group">
                                        <label asp-for="ProjectID" class="control-label"></label>
                                        <select asp-for="ProjectID" class="form-control select2" asp-items="@(new SelectList(ViewBag.projectList,"ID","Name"))"></select>
                                        <span asp-validation-for="ProjectID" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Deadline" class="control-label"></label>
                                        <input asp-for="Deadline" class="form-control" />
                                        <span asp-validation-for="Deadline" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div>
            <a asp-action="Index" asp-controller="Project">Back to List</a>
        </div>
    </section>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <!-- Select2 -->
    <script src="~/plugins/select2/js/select2.full.min.js"></script>
    <!-- Select2 -->
    <!-- Select2 -->
    <link rel="stylesheet" href="~/plugins/select2/css/select2.min.css">
    <link rel="stylesheet" href="~/plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css">
    <!-- Page specific script -->
    <script>
        $(function () {

            $('.select2').select2({
                theme: 'bootstrap4'
            });
        })
    </script>
}
