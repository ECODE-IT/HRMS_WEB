@model HRMS_WEB.Entities.SecondaryProject

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Create upcoming project</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Upcoming project</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content p-5">
        <div class="card card-info">
            <div class="card-header">
                <h3 class="card-title">Add Project </h3>
            </div>
            <div class="card-body p-3">
                <div class="row">
                    <div class="col-md-12">
                        <form asp-action="AddProject" asp-controller="SecondaryProject">

                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" />
                            </div>

                            <div class="form-group">
                                <label asp-for="Remark" class="control-label"></label>
                                <input asp-for="Remark" class="form-control" />
                            </div>

                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary"/>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div>
            <a asp-action="Index" asp-controller="SecondaryProject">Back to List</a>
        </div>
    </section>
</div>