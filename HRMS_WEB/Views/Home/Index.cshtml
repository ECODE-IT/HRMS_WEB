<script>

    var connection = new signalR.HubConnectionBuilder()
        .withUrl('/Home/Index')
        .build();

    connection.on('RecieveMessage', addMessageToChat);

    connection.start()
        .catch(error => {
            console.error(error.message);
        });

    function sendMessageToHub(message) {
        connection.invoke('SendMessage', message);
    }

    $('.chatsend').click(function () {

        let yourmessage = $('.in').val();
        $('.in').val(' ');


        let level1 = document.createElement('div');
        level1.className += " direct-chat-msg right";

        let level2 = document.createElement('div');
        level2.className += " direct-chat-infos clearfix";

        let level2span1 = document.createElement('span');
        level2span1.className += " direct-chat-name float-right";
        level2span1.textContent = @Html.Raw(Json.Serialize(User.Identity.Name));

        let level2span2 = document.createElement('span');
        level2span2.className += " direct-chat-timestamp float-left";
        level2span2.textContent = '23 Jan 6:10 pm';

        let image = document.createElement('img');
        image.className += " direct-chat-img";
        image.src = "dist/img/user3-128x128.jpg";

        let level3 = document.createElement('div');
        level3.className += " direct-chat-text";
        level3.textContent = yourmessage;

        level2.appendChild(level2span1);
        level2.appendChild(level2span2);

        level1.appendChild(level2);
        level1.appendChild(image);
        level1.appendChild(level3);

        $('.direct-chat-messages').append(level1);

        let message = new Message(@Html.Raw(Json.Serialize(User.Identity.Name)), yourmessage.toString());

        sendMessageToHub(message);

        $(".direct-chat-messages").animate({ scrollTop: $('.direct-chat-messages').prop("scrollHeight") }, 1000);
    });

    function addMessageToChat(message) {

        let level1 = document.createElement('div');
        level1.className += " direct-chat-msg left";

        let level2 = document.createElement('div');
        level2.className += " direct-chat-infos clearfix";

        let level2span1 = document.createElement('span');
        level2span1.className += " direct-chat-name float-left";
        level2span1.textContent = message.username;

        let level2span2 = document.createElement('span');
        level2span2.className += " direct-chat-timestamp float-right";
        level2span2.textContent = '23 Jan 6:10 pm';

        let image = document.createElement('img');
        image.className += " direct-chat-img";
        image.src = "dist/img/user1-128x128.jpg";

        let level3 = document.createElement('div');
        level3.className += " direct-chat-text";
        level3.textContent = message.message;

        level2.appendChild(level2span1);
        level2.appendChild(level2span2);

        level1.appendChild(level2);
        level1.appendChild(image);
        level1.appendChild(level3);

        $('.direct-chat-messages').append(level1);

        var audio = new Audio();
        audio.src = 'audio/whatsapp_incoming.mp3';
        audio.play();

        $(".direct-chat-messages").animate({ scrollTop: $('.direct-chat-messages').prop("scrollHeight") }, 1000);
    }

    class Message {
        constructor(username, message) {
            this.username = username;
            this.message = message;
        }
    }
        const users = @Html.Raw(Json.Serialize(usermanager.Users));

        users.forEach(item => {
            const li = document.createElement('li');
            debugger;
            const img = document.createElement('img');
            img.className += ' contacts-list-img';
            img.src = 'dist/img/user1-128x128.jpg';

            const div = document.createElement('div');
            div.className += ' contacts-list-info';

            const span1 = document.createElement('span');
            span1.className += ' contacts-list-name'

            const small = document.createElement('span');
            small.className += " contacts-list-date float-right";

            const span2 = document.createElement('span');
            span2.className += ' contacts-list-msg'

            small.textContent = item.userName

            span1.textContent = item.name
            span1.appendChild(small)

            div.appendChild(span1)

            span2.textContent = "offline"

            div.appendChild(span2)

            li.appendChild(img);
            li.appendChild(div);

            $('.contacts-list').append(li);
        });

</script>