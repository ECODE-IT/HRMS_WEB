@model HRMS_WEB.Entities.SubLevel

@{
    ViewData["Title"] = "Edit";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Edit sub level</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Projects</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content p-5">
        <div class="card card-info">
            <div class="card-header">
                <h3 class="card-title">Edit Sub level </h3>
            </div>
            <div class="card-body p-3">
                <div class="row">
                    <div class="col-md-12">
                        <form asp-action="Edit" asp-controller="SubLevel">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="row">
                                <div class="col-12 col-sm-6">
                                    <input type="hidden" asp-for="UserID" />
                                    <input type="hidden" asp-for="ID" />
                                    <input type="hidden" asp-for="ProjectID" />
                                    <div class="form-group">
                                        <label class="control-label">Sub level Id</label>
                                        <input asp-for="ID" class="form-control" disabled />
                                    </div>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="form-group">
                                        <label asp-for="UserID" class="control-label"></label>
                                        <input asp-for="UserID" class="form-control" disabled />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12 col-sm-6">
                                    <div class="form-group">
                                        <label class="control-label">Created user Email</label>
                                        <input asp-for="User.Email" class="form-control" disabled />
                                    </div>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="form-group">
                                        <label class="control-label">Created user tele:</label>
                                        <input asp-for="User.PhoneNumber" class="form-control" disabled />
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Remark" class="control-label"></label>
                                <input asp-for="Remark" class="form-control" />
                                <span asp-validation-for="Remark" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Deadline" class="control-label"></label>
                                <input asp-for="Deadline" class="form-control" />
                                <span asp-validation-for="Deadline" class="text-danger"></span>
                            </div>
                            <div class="row">
                                <div class="col-12 col-sm-6">
                                    <div class="form-group">
                                        <label asp-for="ManHours" class="control-label"></label>
                                        <input asp-for="ManHours" class="form-control" />
                                        <span asp-validation-for="ManHours" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12 col-sm-6 text-center mt-4">
                                    <div class="form-group">
                                        <input type="checkbox" asp-for="IsActive" id="remember" class="mr-2">
                                        <label asp-for="IsActive" class="control-label"></label>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12 col-sm-6">
                                    <div class="form-group">
                                        <label asp-for="progressFraction" class="control-label"></label>
                                        <input asp-for="progressFraction" class="form-control" type="number" />
                                        <span asp-validation-for="progressFraction" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="form-group">
                                        <label asp-for="PriorityLevel" class="control-label"></label>
                                        <input asp-for="PriorityLevel" class="form-control" type="number" />
                                        <span asp-validation-for="PriorityLevel" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div>
            <a asp-action="Index" asp-controller="Project">Back to List</a>
        </div>
    </section>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
