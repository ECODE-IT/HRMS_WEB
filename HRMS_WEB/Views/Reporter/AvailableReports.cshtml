@{
    ViewData["Title"] = "Report List";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">@ViewData["Title"]</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Dashboard v2</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                    @foreach (string name in ViewBag.reportnamelist)
                    {
                        <div class="col-sm-6">
                            <div class="callout callout-success" data-id="@name">
                                <h5>@name</h5>
                            </div>
                        </div>
                    }
            </div>
        </div>
    </section>
    <!-- /.content -->
</div>

<script>
    $(function () {
        $('.callout').click(function () {
            window.open("/Reporter/GenerateReport?xmlname=" + $(this).data("id") + '.ecodex', '_blank');
        })
    })
</script>
