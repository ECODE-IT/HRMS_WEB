@model HRMS_WEB.Entities.UpcomingProjects

@{
    ViewData["Title"] = "Create Upcoming project";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Create upcoming project</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Upcoming project</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content p-5">
        <div class="card card-info">
            <div class="card-header">
                <h3 class="card-title">Edit Sub level </h3>
            </div>
            <div class="card-body p-3">
                <div class="row">
                    <div class="col-md-12">
                        <form asp-action="CreateUpcomingProject" asp-controller="Project">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="AssigedUserId" class="control-label"></label>
                                <select asp-for="AssigedUserId" class="form-control select2" asp-items="@(new SelectList(ViewBag.userList,"ID","Username"))"></select>
                                <span asp-validation-for="AssigedUserId" class="text-danger"></span>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label asp-for="Name" class="control-label"></label>
                                        <input asp-for="Name" class="form-control" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label asp-for="Code" class="control-label"></label>
                                        <input asp-for="Code" class="form-control" />
                                        <span asp-validation-for="Code" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Remark" class="control-label"></label>
                                <input asp-for="Remark" class="form-control" />
                                <span asp-validation-for="Remark" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Deadline" class="control-label"></label>
                                <input asp-for="Deadline" class="form-control" />
                                <span asp-validation-for="Deadline" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Customer" class="control-label"></label>
                                <input asp-for="Customer" class="form-control" />
                                <span asp-validation-for="Customer" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div>
            <a asp-action="Index" asp-controller="Project">Back to List</a>
        </div>
    </section>
</div>

<!-- Select2 -->
<script src="~/plugins/select2/js/select2.full.min.js"></script>
<!-- Select2 -->
<!-- Select2 -->
<link rel="stylesheet" href="~/plugins/select2/css/select2.min.css">
<link rel="stylesheet" href="~/plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css">
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


    <script>
        $(document).ready(function () {

            $('.select2').select2({
                theme: 'bootstrap4'
            });

        });
    </script>

}