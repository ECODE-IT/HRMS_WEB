@model HRMS_WEB.Viewmodels.ActiveMembersViewModel
@inject UserManager<ApplicationUser> usermanger;

@{
    ViewData["Title"] = "Duty Logs";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">@ViewData["Title"]</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Dashboard v2</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card card-primary">
                        <div class="card-header">
                            User Activity on @Model.date
                        </div>
                        <div class="card-body">
                            @foreach (var entry in Model.DutyOnOffList)
                            {
                                <div class="row">
                                    <p class="col-sm-3">@usermanger.FindByIdAsync(entry.Key).Result.Email</p>
                                    <div class="col">
                                        @foreach (var log in entry)
                                        {
                                            if (log.IsDutyOn)
                                            {
                                                <button class="btn btn-info" style="margin: 2px; width: 120px">Duty ON @log.LogDateTime.TimeOfDay</button>
                                            }
                                            else
                                            {

                                    <button class="btn btn-danger" style="margin: 2px; width: 120px">Duty OFF @log.LogDateTime.TimeOfDay</button>

                                            }
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="card-footer">
                            <h3 class="card-title">Total users count is @Model.DutyOnOffList.Count</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- /.content -->
</div>

